@require '../../themes/standard/config/breakpoints'
@require '../../themes/standard/config/colors'

.slide
  transition 0.5s

.slider
  max-width 1000px
  position relative
  margin 0 auto
  width 100%
  margin-top 20px
  margin-bottom 30px

.slider-arrows
  position absolute
  width 100%
  z-index 3

.slider-arrows a
  cursor pointer
  display block
  opacity 0.8


.slider-arrows > .arrow-right
  right 0

.inner-container
  margin-bottom 30px
  display flex

