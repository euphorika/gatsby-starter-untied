@require '../../themes/standard/config/breakpoints'
@require '../../themes/standard/config/colors'

:root
  --section-highlight-color highlight-color

.pricing-table-section
  margin 40px auto
  max-width 300px
  font-size: 12px
  padding: 15px 0
  border: solid 1px var(--section-highlight-color)

  +above('m')
    margin-left: 15px
    margin-right: 15px

  .headline, .price, .description, .call-to-action
    padding: 0 20px

  .headline
    margin: 0
    font-size: 18px

  .price
    margin-bottom: 10px
    font-size: 15px

  .description
    margin-top: 10px

  .call-to-action
    margin-top: 20px

    a
      display: inline-block
      width: 100%
      text-align: center
      color: link-color
      font-size: 12px
      background: primary-color
      text-decoration: none
      border-radius: 5px
      padding: 12px
