@require '../../themes/standard/config/breakpoints'
@require '../../themes/standard/config/colors'

@require './element.module.styl'

.element-container
  .label
    padding 10px

    .element
      margin-left 10px

  .element
    padding 10px
    width 100%
    border-radius: 5px

    &:required
      & + .after-form-element
        &::before
          position: absolute
          right: 5px
          margin-top: calc(.5em + 5px)

  .icon
    position: absolute
    top: 25%
    margin-top: -8px
    right: 25px
    width: 15px

    +above('m')
      top: 50%
